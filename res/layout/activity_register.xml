<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp" >

        <EditText
            android:id="@+id/login_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/crilte_white"
            android:cursorVisible="true"
            android:hint="请输入用户名"
            android:maxLength="16"
            android:paddingBottom="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:paddingTop="14dp"
            android:singleLine="true"
            android:textColor="@color/comm_dark_gray"
            android:textCursorDrawable="@drawable/visible_style"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/login_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/crilte_white"
            android:cursorVisible="true"
            android:hint="请输入邮箱"
            android:maxLength="40"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingTop="14dp"
            android:singleLine="true"
            android:textColor="@color/comm_dark_gray"
            android:textCursorDrawable="@drawable/visible_style"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/login_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/crilte_white"
            android:cursorVisible="true"
            android:hint="请输入昵称"
            android:maxLength="16"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="@color/comm_dark_gray"
            android:textCursorDrawable="@drawable/visible_style"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/login_pwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/crilte_white"
            android:cursorVisible="true"
            android:digits="@string/passwd_digst"
            android:hint="请输入密码(6-16位字符)"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingTop="14dp"
            android:singleLine="true"
            android:textColor="@color/comm_dark_gray"
            android:textCursorDrawable="@drawable/visible_style"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/login_pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/crilte_white"
            android:cursorVisible="true"
            android:digits="@string/passwd_digst"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingTop="14dp"
            android:singleLine="true"
            android:textColor="@color/comm_dark_gray"
            android:textCursorDrawable="@drawable/visible_style"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/login_regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/crilte_orange"
                android:gravity="center"
                android:padding="12dp"
                android:text="注册"
                android:textColor="@color/comm_white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>